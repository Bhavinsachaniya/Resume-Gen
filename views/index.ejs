        <!-- Hero Section - Full Page Height -->
        <section class="hero-section text-center d-flex align-items-center"
            style="min-height: 100vh;">
            <div class="container">
                <!--  <h1 class="fw-bold mb-2">WELCOME, BHAVI</h1> -->
                <h2 class="mb-0">CREATE YOUR PROFESSIONAL CV IN</h2>
                <h2 class="mb-4">JUST <span class="blue-text">5
                        minutes!</span></h2>
                <p class="mb-4">Easy to use. Time-saver. Professional.</p>
                <button class="btn btn-primary px-4 py-2"
                    onclick="window.location.href='/signup'">Let's Get Started</button>
            </div>
        </section>

        <!-- Steps Section -->
        <section class="py-5">
            <div class="container">
                <h2 class="text-center fw-bold mb-3">Create your perfect Resume
                    with easy steps</h2>
                <p class="text-center mb-5">Effortlessly make a job-worthy
                    resume and cover<br>letter that gets you hired faster.</p>

                <div class="row g-4">
                    <!-- Step 1 -->
                    <div class="col-md-4">
                        <div class="card border-0 step-card">
                            <div class="card-body text-center">
                                <div class="icon-box mx-auto mb-3">
                                    <i class="fas fa-layer-group"></i>
                                </div>
                                <h4 class="fw-bold">Choose your CV template</h4>
                                <p class="text-muted">Pick a template and color
                                    of your choice from a variety of
                                    professional templates.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="col-md-4">
                        <div class="card border-0 step-card">
                            <div class="card-body text-center">
                                <div class="icon-box mx-auto mb-3">
                                    <i class="fas fa-file-alt"></i>
                                </div>
                                <h4 class="fw-bold">Place Your Information</h4>
                                <p class="text-muted">Keep track of your CV with
                                    the help of live preview.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="col-md-4">
                        <div class="card border-0 step-card">
                            <div class="card-body text-center">
                                <div class="icon-box mx-auto mb-3">
                                    <i class="fas fa-download"></i>
                                </div>
                                <h4 class="fw-bold">Instantly download your
                                    CV</h4>
                                <p class="text-muted">Easily download your CV as
                                    a PDF and share it via a link.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Templates Section -->
        <section class="templates-section">
            <div class="container text-center">
                <h2 class="fw-bold mb-3">Here are the Best Templates for
                    you</h2>
                <p class="mb-5">A great job application leads to a good
                    interview. An<br>amazing resume is what makes it all
                    possible.</p>

                <div class="d-flex justify-content-center">
                    <div
                        class="template-item-img mx-auto ms-lg-0 position-relative">
                        <img src="/images/final-1.png" alt class="img-fluid">
                        <a href="/signup"
                            class="btn btn-lg btn-primary position-absolute choose-template-btn">Select
                            Template</a>
                    </div>
                </div>
            </div>
        </section>
