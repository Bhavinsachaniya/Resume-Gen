            rel="stylesheet">
        <style>
    body {
      font-family: Arial, sans-serif;
    }

    .hero-section {
      background-color: #f8f9ff;
      padding: 0;
      min-height: 100vh;
      width: 100%;
    }

    .blue-text {
      color: #0d6efd;
    }

    .icon-box {
      width: 60px;
      height: 60px;
      background-color: #0d6efd;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 24px;
    }

    .templates-section {
      background-color: #f8f9ff;
      padding: 60px 0;
      color: black;
    }

    .resume-template {
      background-color: white;
      border-radius: 8px;
    }

    .step-card {
      height: 100%;
    }

    .active {
      color: #0d6efd !important;
      /* Bootstrap primary */
      font-weight: bold;
      text-decoration: underline;
    }
     /* Custom Fixed Height for Navbar */
    .fixed-height {
      height: 80px;  /* Set the desired fixed height for the navbar */
      line-height: 80px;  /* Vertically center the text inside the navbar */
    }

    /* Adjust for mobile devices */
    @media (max-width: 767px) {
      .fixed-height {
        height: auto; /* Flexible height for mobile devices */
        line-height: normal;
      }
    }

    /* Active link styling */
    .navbar-nav .nav-link.active {
      color: #007bff !important;
    }

    /* Hide buttons if needed */
    .hide {
      display: none;
    }
  </style>
